{% extends "layout.twig" %}
{% block title %}Bienvenue sur AOD{% endblock %}
{% block body %}
    <!-- Half Page Image Background Carousel Header -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            {% for plage in plages %}
                {% if loop.index == 1 %}
                <div class="item active">
                {% else %}
                <div class="item">   
                {% endif %}
                    <a href="{{path('une-plage', {'plage':plage.UMID})}}">
                        <!-- Set the first background image using inline CSS below. -->
                        <div class="fill" style="background-image:url('{{asset('img/','public')}}{{plage.PHOTOS}}')"></div>
                        <div class="carousel-caption">
                            <h2>{{plage.TITRE}}</h2>
                            <h4>{{plage.COMMUNE}}</h4>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Half Slider by Start Bootstrap</h1>
                    <p>The background images for the slider are set directly in the HTML using inline CSS. The rest of the styles for this template are contained within the <code>half-slider.css</code>file.</p>
                </div>
            </div>
        </div>
        <div id="map"></div>
        <script src="{{asset('js/googlemap.js', 'public')}}"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA8I4HHxDSi2Dvi7MUHRA3zkQ9cFcFOfwA&callback=initMap" async defer></script>
    {% endblock %}